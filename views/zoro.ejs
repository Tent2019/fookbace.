<!DOCTYPE html>
<html>
  <head>    
    <title><%= firstname+' '+nickname %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />            
    <script src="/javascripts/jquery-3.4.1.min.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="https://kit.fontawesome.com/519b1a65da.js" crossorigin="anonymous"></script>    
    <script>
      $(document).ready(function() {     

        // icon follow
        function iconFollow(bool) {
          if (bool === true) {
            $('#follow i').attr('class','fas fa-check');
            $('#follow div').text('Following'); 
          } else {
            $('#follow i').attr('class','fas fa-user-plus');
            $('#follow div').text('Follow');
          }
        }

        // load icon follow
        let isFollow;
        $.ajax({
          url: '/users/zoro',
          method: 'get',
          success: function(res) {                             
            isFollow = '<%= isfollow %>'== 1 ? true : false           
            iconFollow(isFollow)            
          }
        })

        // ==== follow button ===== ***********        
        $('#follow').click(function() {          
                
          if (isFollow === false) {
            isFollow = true;
            $.ajax({
                url: '/users/zoro/follow/'+1,
                method: 'get',
                success: function(res) {                                                                                                
                  location.reload();
              }
            })
            
          } else {
            isFollow = false;
            $.ajax({
                url: '/users/zoro/follow/'+0,
                method: 'get',
                success: function(res) {                                                                                                
                  location.reload();
              }
            })
            
          }
          
        
          
        })        

      })
    </script>
  </head>
  <body>      
